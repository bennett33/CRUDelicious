@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>

<body>
    <div class="container">
        <h1>Welcome to CRUDelicious</h1>
        <div class="column-con">
            <div class="column">
                <p>Check out some recent dishes!</p>
                <hr>
                @foreach(Dish dish in Model)
                {
                    <p><a href="/@dish.DishId">@dish.DishName</a> by @dish.ChefName</p>
                }
            </div>
            <div class="column">
                <p><a href="/new">Add a Dish</a></p>
            </div>
        </div>
    </div>
</body>